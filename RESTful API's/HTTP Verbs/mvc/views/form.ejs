<%- include('partials/header.ejs') %>
    <h1><%= title %></h1>
    <% let c = !!locals.country %>
    <% if(c){ %>
        <form action="/countries/<%= country.id %>?_method=PUT" method="post" autocomplete="off">
    <% }else{ %>
        <form action="/countries" method="post" autocomplete="off">
    <% }%>
            <input type="text" name="name" autofocus placeholder="Country Name"
            <% if(c){ %> value="<%= country.name %>" <% } %>>
            <input type="submit" class="btn" value="Submit">
        </form>

<%- include('partials/footer.ejs'); %>
